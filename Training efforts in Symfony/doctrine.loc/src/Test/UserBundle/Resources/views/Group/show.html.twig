{% extends '::base.html.twig' %}

{% block body -%}
    {{ parent() }}

<div class="container">
    <h1>Group</h1>

    <table class="table my-style">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Room</th>
                <td>{{ entity.room }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('group') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('group_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    {{ form(delete_form) }}
</ul>
</div>
{% endblock %}
