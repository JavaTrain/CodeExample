{% extends '::base.html.twig' %}

{% block body -%}
    {{ parent() }}

<div class="container">
    <h1>Group list</h1>

    <table class="table my-style">
        <thead>
            <tr>
                <th>Id</th>
                <th>Room</th>
                <th>Course</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('group_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.room }}</td>
                <td>{{ entity.getCourse() }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('group_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('group_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('group_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
</div>
    {% endblock %}
