{% extends '::base.html.twig' %}


{% block body %}
    {{ parent() }}

<div class="container">
    <h1>User</h1>

    <table class="table my-style">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity[0].id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity[0].name }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ entity[0].role }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity[0].email }}</td>
            </tr>
            <tr>
                <th>Course</th>
                <td>
                    {% for course in entity[0].courses %}
                        {{ course.name }}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Group</th>
                <td>
                    {% for group in entity[0].groups %}
                        {{ group.room }}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('user') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('user_edit', { 'id': entity[0].id }) }}">
            Edit
        </a>
    </li>
    {{ form(delete_form) }}
</ul>
</div>
{% endblock %}
